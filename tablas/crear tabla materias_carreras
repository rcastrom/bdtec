	horas_teoricas                  smallint                             not null  ,
	horas_practicas                 smallint                             not null  ,
	orden_certificado               smallint                                 null  ,
	semestre_reticula               smallint                             not null  ,
	creditos_prerrequisito          smallint                                 null  ,
	especialidad                    "T_especialidad"                         null  ,
	clave_oficial_materia           character(10)                            null  ,
	renglon                         smallint                                 null   
);
