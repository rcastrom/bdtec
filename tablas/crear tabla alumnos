CREATE TABLE "ITE".alumnos (
	no_de_control                   "ITE"."T_no_de_control"                  not null  ,
	carrera                         "ITE"."T_carrera"                            null  ,
	reticula                        "ITE"."T_reticula"                           null  ,
	especialidad                    "ITE"."T_especialidad"                       null  ,
	nivel_escolar                   "char"                                    null  ,
	semestre                        smallint                                  null  ,
	clave_interna                   char(10)                             null  ,
	estatus_alumno                  char(3)              DEFAULT   'ACT' null  ,
	plan_de_estudios                char(1)                          not null  ,
	apellido_paterno                "ITE"."T_apellidos_persona"                  null  ,
	apellido_materno                "ITE"."T_apellidos_persona"                  null  ,
	nombre_alumno                   varchar(255)                     not null  ,
	curp_alumno                     "ITE"."T_curp"                               null  ,
	fecha_nacimiento                "ITE"."T_fecha"                              null  ,
	sexo                            "ITE"."T_sexo"                               null   ,
	estado_civil                    "ITE"."T_estado_civil"                       null   ,
	tipo_ingreso                    numeric(1,0)                     not null  ,
	periodo_ingreso_it              "ITE"."T_periodo"                        not null  ,
	ultimo_periodo_inscrito         "ITE"."T_periodo"                            null  ,
	promedio_periodo_anterior       "ITE"."T_promedio"                           null  ,
	promedio_aritmetico_acumulado   "ITE"."T_promedio"                           null  ,
	creditos_aprobados              "ITE"."T_creditos"                           null  ,
	creditos_cursados               "ITE"."T_creditos"                           null  ,
	promedio_final_alcanzado        "ITE"."T_promedio"                           null  ,
	tipo_servicio_medico            char(1)                              null  ,
	clave_servicio_medico           char(20)                             null  ,
	escuela_procedencia             varchar(50)                          null  ,
	tipo_escuela                    smallint                                  null  ,
	domicilio_escuela               varchar(60)                          null  ,
	entidad_procedencia             "ITE"."T_lugar_nac"                          null  ,
	ciudad_procedencia              "ITE"."T_ciudad"                             null  ,
	correo_electronico              varchar(60)                          null  ,
	periodos_revalidacion           smallint                                  null  ,
	indice_reprobacion_acumulado    numeric(8,6)                         null  ,
	becado_por                      varchar(100)                         null  ,
	nip                             int                                  null  ,
	fecha_titulacion                "ITE"."T_fecha"                      null  ,
	opcion_titulacion               varchar(4)                           null  ,
	periodo_titulacion              "ITE"."T_periodo"                    null  ,
	nss                             varchar(20)                          null  ,
    created_at                      timestamp without time zone,
    updated_at                      timestamp without time zone
);


